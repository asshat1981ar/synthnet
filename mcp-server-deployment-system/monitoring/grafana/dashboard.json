{
  "dashboard": {
    "id": null,
    "title": "MCP Server Monitoring Dashboard",
    "tags": ["mcp-server", "microservices", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"mcp-server\"}",
            "legendFormat": "{{kubernetes_pod_name}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_server_requests_total[5m])",
            "legendFormat": "{{method}} - {{endpoint}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mcp_server_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} - {{endpoint}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_server_requests_total{status_code=~\"4..|5..\"}[5m]) / rate(mcp_server_requests_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Error Rate",
            "min": 0,
            "max": 1
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "mcp_server_active_connections",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "mcp_server_database_connections_active",
            "legendFormat": "Active"
          },
          {
            "expr": "mcp_server_database_connections_idle",
            "legendFormat": "Idle"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Cache Hit Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_server_cache_hits_total[5m]) / (rate(mcp_server_cache_hits_total[5m]) + rate(mcp_server_cache_misses_total[5m]))",
            "legendFormat": "Hit Rate"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "yAxes": [
          {
            "label": "Hit Rate",
            "min": 0,
            "max": 1
          }
        ]
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{pod=~\"mcp-server-.*\"} / container_spec_memory_limit_bytes{pod=~\"mcp-server-.*\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "yAxes": [
          {
            "label": "Usage %",
            "min": 0,
            "max": 1
          }
        ]
      },
      {
        "id": 9,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"mcp-server-.*\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "yAxes": [
          {
            "label": "CPU Cores",
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{pod=~\"mcp-server-.*\"}[5m])",
            "legendFormat": "Inbound - {{pod}}"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{pod=~\"mcp-server-.*\"}[5m])",
            "legendFormat": "Outbound - {{pod}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "yAxes": [
          {
            "label": "Bytes/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 11,
        "title": "Top Endpoints by Request Count",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint, method) (rate(mcp_server_requests_total[1h])))",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 12,
        "title": "Alert Summary",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertname=~\".*MCP.*\"}",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 32
        }
      },
      {
        "id": 13,
        "title": "Version Info",
        "type": "table",
        "targets": [
          {
            "expr": "mcp_server_build_info",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 32
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(up{job=\"mcp-server\"}, kubernetes_namespace)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"mcp-server\", kubernetes_namespace=~\"$namespace\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "resets(mcp_server_build_info[1h])",
          "titleFormat": "Deployment",
          "textFormat": "New version deployed"
        }
      ]
    }
  }
}