{
  "family": "mcp-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/mcpServerTaskRole",
  "containerDefinitions": [
    {
      "name": "mcp-server",
      "image": "${ECR_REPOSITORY}:${IMAGE_TAG}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp",
          "name": "http"
        },
        {
          "containerPort": 8001,
          "protocol": "tcp",
          "name": "health"
        },
        {
          "containerPort": 9090,
          "protocol": "tcp",
          "name": "metrics"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8000"
        },
        {
          "name": "HEALTH_CHECK_PORT",
          "value": "8001"
        },
        {
          "name": "METRICS_PORT",
          "value": "9090"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_REGION}"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/mcp-server/prod/database-url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/mcp-server/prod/redis-url"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/mcp-server/prod/secret-key"
        },
        {
          "name": "FHIR_API_KEY",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/mcp-server/prod/fhir-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mcp-server",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8001/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "mountPoints": [
        {
          "sourceVolume": "tmp",
          "containerPath": "/tmp",
          "readOnly": false
        }
      ],
      "volumesFrom": [],
      "user": "1000:1000",
      "readonlyRootFilesystem": true,
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        }
      },
      "systemControls": [],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "stopTimeout": 30
    },
    {
      "name": "nginx-sidecar",
      "image": "nginx:alpine",
      "essential": false,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp",
          "name": "nginx-http"
        }
      ],
      "environment": [
        {
          "name": "NGINX_HOST",
          "value": "localhost"
        },
        {
          "name": "NGINX_PORT",
          "value": "80"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-config",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-logs",
          "containerPath": "/var/log/nginx",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mcp-server-nginx",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "nginx",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost/nginx-health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "dependsOn": [
        {
          "containerName": "mcp-server",
          "condition": "HEALTHY"
        }
      ]
    },
    {
      "name": "datadog-agent",
      "image": "public.ecr.aws/datadog/agent:latest",
      "essential": false,
      "environment": [
        {
          "name": "DD_API_KEY",
          "value": "${DATADOG_API_KEY}"
        },
        {
          "name": "DD_SITE",
          "value": "datadoghq.com"
        },
        {
          "name": "ECS_FARGATE",
          "value": "true"
        },
        {
          "name": "DD_DOCKER_LABELS_AS_TAGS",
          "value": "{\"com.docker.compose.service\":\"service\"}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/datadog-agent",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "datadog",
          "awslogs-create-group": "true"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "tmp",
      "host": {}
    },
    {
      "name": "nginx-config",
      "host": {}
    },
    {
      "name": "nginx-logs",
      "host": {}
    }
  ],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Service",
      "value": "mcp-server"
    },
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "ManagedBy",
      "value": "ecs-deployment"
    }
  ]
}